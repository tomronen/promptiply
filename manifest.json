{
  "manifest_version": 3,
  "name": "promptiply",
  "version": "0.1.0",
  "description": "promptiply refines prompts inline on ChatGPT and Claude using profiles and API/WebUI modes.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content/injector.js"
      ],
      "css": [
        "content/ui/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "promptiply"
  },
  "options_page": "options/index.html",
  "commands": {
    "refine": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Refine current prompt"
    },
    "switch-profile": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Switch profile"
    }
  }
}
